<!-- CONTENT BLOCK FOR GRID SYSTEM -->
<div class="content-block">
	<div class="row" id="grid_system">
		<h1>Grid System</h1>
	</div>

	<!-- div.row.content-wrapper -->
	<div class="row content-wrapper__grid">
		<div class="col-1 content-wrapper__grid-item">.col-1</div>
