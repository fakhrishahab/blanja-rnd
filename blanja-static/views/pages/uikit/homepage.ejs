	<div class="row content-wrapper__code">
		<figure>
			<pre>
				<code data-lang="scss" class="language-scss">
					// Add this code to the top of your scss file
					@import 'base/grid';
				</code>
			</pre>
		</figure>
	</div>

	<div class="row">
		<h2>How to use it</h2>
	</div>

